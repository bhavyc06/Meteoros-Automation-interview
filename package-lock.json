{
  "name": "meteoros",
  "scripts": {
    "dev": "concurrently \"npm:start --prefix server\" \"npm:start --prefix client\"",

    "build": "npm --prefix client run build && rimraf server/dist && xcopy /E /I /Y client\\dist server\\dist",

    "start": "node server/src/server.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  }
}
